{
  "name": "imageforge-site",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:e2e": "playwright test -c playwright.config.ts",
    "test:visual": "playwright test -c playwright.visual.config.ts",
    "test:visual:update": "playwright test -c playwright.visual.config.ts --update-snapshots",
    "lhci": "lhci autorun --config=./lighthouserc.json",
    "quality:gates:local": "pnpm test:unit && pnpm test:e2e && pnpm test:visual && pnpm lhci",
    "check:ci": "pnpm lint && pnpm typecheck && pnpm format && NEXT_PUBLIC_SITE_URL=https://example.com pnpm build && pnpm seo:test && NEXT_PUBLIC_SITE_URL=https://example.com SEO_MODE=advisory pnpm seo:check",
    "seo:tech": "node scripts/seo/run.mjs --suite tech --mode advisory",
    "seo:content": "node scripts/seo/run.mjs --suite content --mode advisory",
    "seo:offpage": "node scripts/seo/run.mjs --suite offpage --mode advisory",
    "seo:full": "node scripts/seo/run.mjs --suite full --mode advisory",
    "seo:check": "node scripts/seo/run.mjs --suite full --mode ${SEO_MODE:-advisory}",
    "seo:test": "node --test scripts/seo/__tests__/*.test.mjs",
    "benchmark:test": "node --test scripts/benchmark/__tests__/*.test.mjs",
    "animation:matrix": "node --experimental-strip-types scripts/animation/collect-matrix.mts",
    "animation:safety": "node --experimental-strip-types scripts/animation/assert-core-safety.mts",
    "animation:check": "bash scripts/animation/run-check.sh",
    "check:workflow-action-pinning": "node scripts/security/check-workflow-action-pinning.mjs",
    "format": "prettier --check .",
    "format:write": "prettier --write ."
  },
  "dependencies": {
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "cheerio": "^1.1.2",
    "motion": "^12.34.2",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "googleapis": "^171.4.0",
    "jsdom": "^28.1.0",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "overrides": {
      "qs": ">=6.14.2"
    }
  }
}
