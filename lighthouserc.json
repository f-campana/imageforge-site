{
  "ci": {
    "collect": {
      "numberOfRuns": 2,
      "startServerCommand": "NEXT_PUBLIC_SITE_URL=https://example.com BENCHMARK_ENABLE_LOCAL_FIXTURE=1 BENCHMARK_SNAPSHOT_FIXTURE=sample pnpm build && NEXT_PUBLIC_SITE_URL=https://example.com BENCHMARK_ENABLE_LOCAL_FIXTURE=1 BENCHMARK_SNAPSHOT_FIXTURE=sample pnpm exec next start --hostname 127.0.0.1 --port 3209",
      "startServerReadyPattern": "Ready",
      "startServerReadyTimeout": 240000,
      "url": [
        "http://127.0.0.1:3209/",
        "http://127.0.0.1:3209/benchmarks/latest"
      ],
      "settings": {
        "preset": "desktop",
        "chromeFlags": "--headless=new --no-sandbox --disable-dev-shm-usage"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": [
          "warn",
          {
            "minScore": 0.8
          }
        ],
        "categories:accessibility": [
          "warn",
          {
            "minScore": 0.9
          }
        ],
        "categories:best-practices": [
          "warn",
          {
            "minScore": 0.9
          }
        ],
        "categories:seo": [
          "warn",
          {
            "minScore": 0.9
          }
        ],
        "largest-contentful-paint": [
          "warn",
          {
            "maxNumericValue": 2500
          }
        ],
        "cumulative-layout-shift": [
          "warn",
          {
            "maxNumericValue": 0.1
          }
        ],
        "interaction-to-next-paint": [
          "warn",
          {
            "maxNumericValue": 200
          }
        ]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": ".tmp/lhci"
    }
  }
}
